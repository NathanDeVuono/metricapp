= provide(:title, "Editing " + @user_datum[:month].strftime("%B, %Y"))

- flash.each do |key, msg|
  %div{ :class => 'text-center bg-' + key.to_s } 
    %span{ :class => 'h3 text-' + key.to_s}
      #{msg}

.page-header
  %h1
    Editing
    = @user_datum[:month].strftime("%B, %Y")
.container
  .userlinks
    = link_to 'Back', user_data_path, :class => 'btn btn-default'
  = render 'form'

  

= provide(:title, "Home")
.page-header
  %h1 
    Listing user_data
    %small 
      Welcome, 
      = @current_user[:name] + '!'

.userlinks 
  = link_to 'New User datum', new_user_datum_path, :class => 'btn btn-primary'
  
  = if correct_user?
    - link_to 'Register a New User', '/register', :class => 'btn'

  = link_to 'Log Out', signout_path, :method => :delete, :data => {:confirm => "Are you sure you want to log out?"}, :class => 'btn btn-default'

%nav.navigation
  %ul 
    - @user_data.each do |user_datum|
      %li= link_to user_datum.month.strftime("%B, %Y"), user_datum
.overview
  .chart 
  .chartdata

.clear

= debug @user_data

= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/d3/3.4.1/d3.js'
= javascript_include_tag "showD3Chart"
= provide(:title, "Home")
- flash.each do |key, msg|
  %div{ :class => 'text-center bg-' + key.to_s } 
    %span{ :class => 'h3 text-' + key.to_s}
      #{msg}
.page-header
  %h1 
    KPI Analysis
    %small 
      Welcome, 
      = @current_user[:name] + '!'
.container
  .userlinks 
    = link_to 'Input New Metrics', new_user_datum_path, :class => 'btn btn-primary'
    
    = if correct_user?
      - link_to 'Register a New User', '/register', :class => 'btn btn-default'

    = link_to 'Log Out', signout_path, :method => :delete, :data => {:confirm => "Are you sure you want to log out?"}, :class => 'btn btn-default'

  %nav.navigation
    %ul 
      - @user_data.each do |user_datum|
        %li= link_to user_datum.month.strftime("%B, %Y"), user_datum
  .overview
    .splash_charts 
    .datadump
      - @user_data.each do |user_datum|
        %div{ :class => user_datum[:month].strftime("%Y")}
          %span{ :class => 'total_hours_sold'}
            = user_datum[:total_hours_sold]
          %span{ :class => 'retail_hours_sold'}
            = user_datum[:retail_hours_sold]
          %span{ :class => 'total_labour_sales'}
            = user_datum[:total_labour_sales]
          %span{ :class => 'retail_labour_sales'}
            = user_datum[:retail_labour_sales]
          %span{ :class => 'number_of_techs'}
            = user_datum[:number_of_techs]
          %span{ :class => 'work_days_per_tech'}
            = user_datum[:work_days_per_tech]
          %span{ :class => 'retail_ro_count'}
            = user_datum[:retail_ro_count]
          %span{ :class => 'total_variable_expense'}
            = user_datum[:total_variable_expense]
          %span{ :class => 'total_salaries'}
            = user_datum[:total_salaries]

  .clear

= debug @user_data

= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/d3/3.4.1/d3.js'
= javascript_include_tag "retailhoursperro"
= javascript_include_tag 'hourspertechperday'
= javascript_include_tag 'retailrocount'
= javascript_include_tag 'effectivelabourrate'
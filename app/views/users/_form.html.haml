= form_for @user do |f|

  .form-group.col-xs-6
    = f.label(:name, "Name", :class => 'control-label')
    = f.text_field(:name, :placeholder => 'John Doe', :class => 'form-control')

  .form-group.col-xs-6
    = f.label(:email, "Email", :class => 'control-label')
    = f.text_field(:email, :placeholder => 'John Doe', :class => 'form-control')

  .form-group.col-xs-6
    = f.label(:password, "Password", :class => 'control-label')
    = f.password_field(:password, :placeholder => 'Password', :class => 'form-control')

  .form-group.col-xs-6
    = f.label(:password_confirmation, "Password Confirmation", :class => 'control-label')
    = f.password_field(:password_confirmation, :placeholder => 'Password Confirmation', :class => 'form-control')

  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .actions.pull-left.col-xs-12.col-md-2.btn-group-vertical
    = f.submit 'Save', :class => 'btn btn-primary'
